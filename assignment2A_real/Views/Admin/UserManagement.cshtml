@model List<assignment2A_real.Models.UserProfile>

@{
    ViewData["Title"] = "User Management";
}


<style>
    .table-spacing th {
        padding: 8px;
    }

    .table-spacing td {
        padding: 8px;
    }
</style>

<h1>@ViewData["Title"]</h1>


<h2>User List</h2>
<table class="table">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Password</th>
        <th>AcctNo</th>
        <th>Action</th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Name</td>
            <td>@user.Email</td>
            <td>@user.Phone</td>
            <td>@user.Password</td>
            <td>@user.AcctNo</td>
            <td>
                <form method="post" action="/Admin/DeactivateUser">
                    <input type="hidden" name="name" value="@user.Name" />
                    <button type="submit" class="btn btn-primary">Deactivate</button>
                </form>
                <form method="get" action="/Admin/EditSelectProfile">
                    <input type="hidden" name="name" value="@user.Name" />
                    <button type="submit" class="btn btn-primary">Edit</button>
                </form>
            </td>
        </tr>
    }
</table>

<h2>Create User</h2>
<form method="post" action="/Admin/CreateUser">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" required />

    <label for="email">Email:</label>
    <input type="email" id="email" name="email" required />

    <label for="address">Address:</label>
    <input type="text" id="address" name="address" required />

    <label for="phone">Phone:</label>
    <input type="tel" id="phone" name="phone" required />

    <label for="password">Password:</label>
    <input type="password" id="password" name="password" required />

    <label for="acctNo">Account Number:</label>
    <input type="text" id="acctNo" name="acctNo" />

    <label for="type">Type:</label>
    <input type="text" id="type" name="type" required />

    <label for="picture">Picture:</label>
    <input type="text" id="picture" name="picture" />


    <button type="submit" class="btn btn-primary">Create User</button>
</form>

<h2>Search Users</h2>
<form method="get" action="/Admin/SearchUsers">
    <div class="form-group">
        <input type="text" id="searchTerm" name="search" class="form-control" placeholder="Search by name or email" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<form method="post" action="/Admin/Transactions">
    <button type="submit" class="btn btn-success">All Users Transaction History</button>
</form>

